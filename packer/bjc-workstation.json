{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "source_ami": "ami-87c037e7",
    "winrm_username": "Administrator",
    "winrm_password": "RL9@T40BTmXh",
    "domain": "chordata.biz",
    "enterprise": "mammalia",
    "org": "diprotodontia",
    "build-nodes": "1"
  },

  "builders": [
    { "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "m3.large",
      "communicator": "winrm",
      "associate_public_ip_address": true,
      "ssh_private_ip": false,
      "winrm_port": 5985,
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "user_data_file": "{{template_dir}}/scripts/bootstrap-aws.txt",
      "ami_name": "bjc-workstation-{{timestamp}}"
    }
  ],

  "provisioners" : [
    {
      "type": "windows-shell",
      "inline": ["mkdir C:\\Users\\{{user `winrm_username`}}\\cookbooks"]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/../cookbooks/site-config",
      "destination": "C:\\Users\\{{user `winrm_username`}}\\cookbooks\\site-config"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/files/",
      "destination": "C:\\Windows\\Temp"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "execute_command": "c:/opscode/chef/bin/chef-solo.bat --no-color -c {{.ConfigPath}} -j {{.JsonPath}} -L C:/windows/temp/packerbuild.log",
      "cookbook_paths": [ "{{pwd}}/vendored-cookbooks/bjc-workstation" ],
      "run_list": [ "bjc-workstation" ],
      "json": {
        "demo": {
          "domain": "{{user `domain`}}",
          "enterprise": "{{user `enterprise`}}",
          "org": "{{user `org`}}",
          "build-nodes": "{{user `build-nodes`}}"
        }
      }
    }
  ]
}
